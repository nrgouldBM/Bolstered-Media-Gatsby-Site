{
    "compilerOptions": {
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "baseUrl": "./src",
        "jsx": "react",
        "lib": [
            "dom",
            "esnext",
        ],
        "moduleResolution": "node",
        "noImplicitAny": false,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "plugins": [
            {
                "name": "typescript-styled-plugin"
            }
        ],
        "target": "es2015"
    },
    "include": [
        "**/*.ts",
        "**/*.tsx",
        "src/pages/{MarkdownRemark.frontmatter__path}.js",
    ],
    "exclude": [
        "node_modules/*",
        "public/*",
    ]
}